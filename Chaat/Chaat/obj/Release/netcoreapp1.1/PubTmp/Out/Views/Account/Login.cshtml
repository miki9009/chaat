@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager



<h4 style="color:red">@ViewData["Message"].</h4>
<div class="row">
    <div class="col-md-8">
        
        <h1 style="color:white; text-align:center; font-family: 'Chewy', cursive; font-size:800%">CHAAT!</h1>
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="col-md-2 control-label" style="color:white">Email:</label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" style="color:white">Hasło:</label>
                    <div class="col-md-10">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <label asp-for="RememberMe" style="color:white">
                                <input asp-for="RememberMe"  />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="chaat-button">Zaloguj</button>
                    </div>
                </div>
                <p>
                    <a class="chaat-button" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Zarejestruj</a>
                </p>
                <p>
                    <a class="chaat-button" asp-action="ForgotPassword">Zapomniałeś hasła?</a>
                </p>
            </form>
        </section>
    </div>
    <div class="col-md-4">
        <section>
            <h4 style="margin-top:50px; color:white">Zaloguj się przez:</h4>
            <hr />
                    <a style="cursor:pointer">
                        <img src="~/images/img_facebook.png" style="margin:auto; width:100%; height:100%; max-width:256px;" />
                    </a>
            <a style="cursor:pointer">
                <img src="~/images/img_google.png" style="margin:auto; width:100%; height:100%; max-width:256px;" />
            </a>


        </section>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
